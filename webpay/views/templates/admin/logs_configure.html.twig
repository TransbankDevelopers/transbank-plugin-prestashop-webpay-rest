{% extends '@Modules/webpay/views/templates/admin/configure_layout.html.twig' %}

{% block tab %}

    {% include '@Modules/webpay/views/templates/admin/tabs.html.twig' with {'tabActive': 4} %}

    <div class="card">
        <div class="card-block row">
            <table class="table" style="width: 100%; margin: 20px;">
                <thead>
                    <tr>
                        <th colspan="2">{{ 'Información de Logs'|trans({}, 'Modules.WebpayPlus.Admin') }}</th>
                    </tr>
                </thead>
                <tr>
                    <td>{{ 'Directorio de logs:'|trans({}, 'Modules.WebpayPlus.Admin') }}</td><td>{{resume.log_dir}}</td>
                </tr>
                <tr>
                    <td>{{ 'Cantidad de logs en directorio:'|trans({}, 'Modules.WebpayPlus.Admin') }}</td><td>{{resume.logs_count.log_count}}</td>
                </tr>
                <tr>
                    <td>{{ 'Listado de logs disponibles:'|trans({}, 'Modules.WebpayPlus.Admin') }}</td><td>
                        {% for log in resume.logs_list %}
                            <li>{{ log }}</li>
                        {% endfor %}
                    </td>
                </tr>
            </table>

            <table class="table" style="width: 100%; margin: 20px;">
                <thead>
                    <tr>
                        <th colspan="2">{{ 'Último Log'|trans({}, 'Modules.WebpayPlus.Admin') }}</th>
                    </tr>
                </thead>
                <tr>
                    <td>{{ 'Último Documento:'|trans({}, 'Modules.WebpayPlus.Admin') }}</td><td>{{lastLog.log_file}}</td>
                </tr>
                <tr>
                    <td>{{ 'Peso del Documento:'|trans({}, 'Modules.WebpayPlus.Admin') }}</td><td>{{lastLog.log_weight}}</td>
                </tr>
                <tr>
                    <td>{{ 'Cantidad de Líneas:'|trans({}, 'Modules.WebpayPlus.Admin') }}</td><td>{{lastLog.log_regs_lines}}</td>
                </tr>
            </table>

        </div>

        <div class="card-block row">
            <div class="col">
                {{lastLog.log_content}}
            </div>
        </div>
        
    </div>

{% endblock %}
    
   